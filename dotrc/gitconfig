[user]
    name = Josh Karpel
    email = josh.karpel@gmail.com

[init]
    defaultBranch = main

[core]
    editor = vim
	autocrlf = input

[push]
	default = simple
	autoSetupRemote = true

[pull]
	ff = only

[rebase]
    autoStash = true
    autoSquash = true

[merge]
    conflictStyle = zdiff3

[rerere]
    enabled = true

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[features]
    manyFiles = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[include]
    path = ~/.gitconfig-local

[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work

[alias]
    st = status
    s = status
    co = checkout
    cob = checkout -b
    br = branch
    branches = branch -a
    remotes = remote -v
    au = add --update
    aa = add --all
    amend = commit --amend
    wip = commit --message "WIP"
    undo = reset --soft HEAD^
    dc = diff --cached
    root = rev-parse --show-toplevel
    discard = reset --hard
    remove-untracked = clean -fd
    l = log --graph --decorate --pretty=oneline --abbrev-commit
    r = !git --no-pager l -n 30
    la = log --graph --decorate --pretty=oneline --abbrev-commit --all
