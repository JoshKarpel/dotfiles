[user]
    name = Josh Karpel
    email = josh.karpel@gmail.com

[core]
    editor = vim
	excludesfile = ~/.gitignore
	autocrlf = input

[push]
	default = simple

[diff]

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[alias]
    st = status
    br = branch
    co = checkout
    p = pull
    cm = commit --message
    amend = commit --amend
    oops = commit --amend
    undo = reset --soft HEAD^
    last = log -1 HEAD
    g = grep
    au = add --update
    fom = fetch origin master:master

    l = !bash -c \"source ~/dotfiles/sources/git.sh && git_pretty_log $*\"
    r = "!git l -30"

    track-upstream = !bash -c \"source ~/dotfiles/sources/git.sh && git_track_upstream $*\"

[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
