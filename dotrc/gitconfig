[user]
    name = Josh Karpel
    email = josh.karpel@gmail.com

[init]
    defaultBranch = main

[core]
    editor = vim
	autocrlf = input

[push]
	default = simple
	autoSetupRemote = true

[pull]
	ff = only

[rebase]
    autoStash = true
    autoSquash = true

[merge]
    conflictStyle = zdiff3

[rerere]
    enabled = true

[help]
    autoCorrect = prompt

[diff]

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[features]
    manyFiles = true

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[include]
    path = ~/.gitconfig-local

[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work

[alias]
    st = status
    co = checkout
    au = add --update
    amend = commit --amend
    wip = commit --message "wip"
    undo = reset --soft HEAD^
    dc = diff --cached

    l = !bash -c \". ~/dotfiles/sources/git.sh && git_pretty_log $*\"
    r = "!git l -30"
    changed = "!git diff --name-only $(git merge-base HEAD origin/main 2>/dev/null || git merge-base HEAD origin/master 2>/dev/null || echo HEAD)"

    root = rev-parse --show-toplevel
