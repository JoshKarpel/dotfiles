{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:gist.githubusercontent.com)",
      "WebFetch(domain:docs.python.org)",
      "WebFetch(domain:packaging.python.org)",
      "WebFetch(domain:just.systems)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:pre-commit.com)",
      "WebFetch(domain:istio.io)",
      "WebFetch(domain:argo-cd.readthedocs.io)",
      "WebFetch(domain:keepachangelog.com)",
      "WebFetch(domain:joshkarpel.github.io)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:pyo3.rs)",
      "Edit(//tmp/**)",
      "Read(//tmp/**)",
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(which *)",
      "Bash(wc *)",
      "Bash(pwd *)",
      "Bash(cd *)",
      "Bash(echo *)",
      "Bash(touch *)",
      "Bash(mkdir *)",
      "Bash(cat *)",
      "Bash(diff *)",
      "Bash(grep *)",
      "Bash(strings *)",
      "Bash(jq *)",
      "Bash(yq *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git show *)",
      "Bash(git rev-parse *)",
      "Bash(git remote *)",
      "Bash(git fetch *)",
      "Bash(git add *)",
      "Bash(gh repo list *)",
      "Bash(gh repo view *)",
      "Bash(gh repo clone *)",
      "Bash(gh repo gitignore *)",
      "Bash(gh repo license *)",
      "Bash(gh issue list *)",
      "Bash(gh issue view *)",
      "Bash(gh issue status *)",
      "Bash(gh pr list *)",
      "Bash(gh pr status *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr view *)",
      "Bash(gh cache list *)",
      "Bash(gh search *)",
      "Bash(gh status *)",
      "Bash(dyff *)",
      "Bash(* --version *)",
      "Bash(* --help *)"
    ],
    "deny": [
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git reset --hard*)",
      "Bash(git checkout .)",
      "Bash(git clean -f*)",
      "Bash(git restore .)",
      "Bash(git branch -D *)",
      "Bash(git remote set*)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Read(**/.env*)",
      "Edit(**/.env*)",
      "Bash(*.env*)",
      "Edit(**/uv.lock)"
    ],
    "ask": []
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-just-list"
          },
          {
            "type": "command",
            "command": "claude-git-status"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claude-uv-check"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-git-add"
          },
          {
            "type": "command",
            "command": "claude-untracked-warn"
          },
          {
            "type": "command",
            "command": "claude-followup-check"
          },
          {
            "type": "command",
            "command": "claude-sound stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "claude-sound notify"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "claude-statusline"
  },
  "defaultMode": "acceptEdits"
}
